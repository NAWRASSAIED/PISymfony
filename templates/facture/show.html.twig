{% extends 'baseback.html.twig' %}

{% block title %}Facture{% endblock %}

{% block main %}
    <div class="container mt-4">
        <h1 class="display-4">Détails de la Facture</h1>
        <table class="table table-bordered mt-4">
            <tbody>
                <tr>
                    <th scope="row">Id Facture</th>
                    <td>{{ facture.idFacture }}</td>
                </tr>
                <tr>
                    <th scope="row">Numéro de Facture</th>
                    <td>{{ facture.numfacture }}</td>
                </tr>
                <tr>
                    <th scope="row">Montant de la Facture</th>
                    <td>{{ facture.montantFacture }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de Paiement</th>
                    <td>{{ facture.datePaiement }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_facture_index') }}" class="btn btn-secondary">Retour à la liste</a>

        <a href="{{ path('app_facture_edit', {'idFacture': facture.idFacture}) }}" class="btn btn-primary">Éditer</a>

        {{ include('facture/_delete_form.html.twig') }}
    </div>
{% endblock %}
